+		switch (info->var.bits_per_pixel)
+		{
+		case 8:
+			/* Yes some hand held devices have this. */
+			((u8*)(info->pseudo_palette))[regno] = v;
+			break;
+		case 16:
+			((u16*)(info->pseudo_palette))[regno] = v;
+			break;
+		case 24:
+		case 32:
+			((u32*)(info->pseudo_palette))[regno] = v;
+			break;
+		}
+		return 0;
+	}
+	/* ... */
+	return 0;
+}
