+		return -ENODEV;
+
+	if (p > info->screen_size)
+		return -ENOSPC;
+	if (count >= info->screen_size)
+		count = info->screen_size;
+	err = 0;
+	if (count + p > info->screen_size) {
+		count = info->screen_size - p;
+		err = -ENOSPC;
