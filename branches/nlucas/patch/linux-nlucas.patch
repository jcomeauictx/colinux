+/* --------------------------------------------------------------------- */
+/*
+ * Driver initialization.
+ */
+static
+int __init cofb_init( void )
+{
+	int rc;
+
+	printk( KERN_INFO"cofb: video mem: %lu KB\n", co_video_size >> 10 );
+
+	cofb_mem = (struct cofb_video_mem_info *) co_video_base;
+
+#ifndef MODULE
+	char *option = NULL;
+	if ( fb_get_options("cofb", &option) )
